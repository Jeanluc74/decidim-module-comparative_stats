<div class="card" id="translation_sets">
  <div class="card-divider">
    <h2 class="card-title flex--sbc">
      <div>
        <%= t ".title" %>
      </div>
    </h2>
  </div>
</div>

    <% if active_endpoints.any? %>

      <ul class="tabs" data-tabs id="charts-tabs">
        <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Global stats</a></li>
        <li class="tabs-title"><a href="#panel2">Global stats timeline</a></li>
        <li class="tabs-title"><a href="#panel3">Processes timeline</a></li>
      </ul>

      <div class="tabs-content" data-tabs-content="charts-tabs" id="charts-tabs-content">
        <div class="tabs-panel is-active" id="panel1">
          <%= cell("decidim/comparative_stats/metric_piecharts", active_endpoints) %>
        </div>
        <div class="tabs-panel" id="panel2">
          <%= cell("decidim/comparative_stats/metric_timelines", active_endpoints) %>
        </div>
        <div class="tabs-panel" id="panel3">
          <%= cell("decidim/comparative_stats/participatory_processes_timeline", active_endpoints) %>
        </div>
      </div>

    <% else %>
    <%= t ".no_endpoints" %>
    <% end %>
